# Backend Environment Variables
# Copy these values to your Render Environment settings

PORT=5000
MONGODB_URI=your_mongodb_uri
JWT_SECRET=your_jwt_secret
ODDS_API_KEY=your_odds_api_key

# Security
# Set this to your Netlify URL to allow frontend access
CORS_ORIGIN=https://betters.netlify.app

# Optional settings
ODDS_API_MARKETS=h2h,spreads,totals
MANUAL_FETCH_MODE=false
ODDS_CRON_MINUTES=2
SPORTS_API_ENABLED=true
ODDS_SCORES_ENABLED=true
ODDS_SCORES_DAYS_FROM=0
IP_BLOCKING_ENABLED=true
DUPLICATE_IP_BLOCK_ENABLED=true
IP_ALLOWLIST=::1,127.0.0.1
MONGODB_TRANSACTIONS_ENABLED=false
ODDS_API_ODDS_FORMAT=decimal
